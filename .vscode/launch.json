    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'orderbook'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=orderbook",
                    "--package=orderbook"
                ],
                "filter": {
                    "name": "orderbook",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'orderbook'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=orderbook",
                    "--package=orderbook"
                ],
                "filter": {
                    "name": "orderbook",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "Open a core dump",
            "initCommands": [
                "target create -c ${input:coreFileName}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "coreFileName",
            "type": "promptString",
            "description": "Enter core file path"
        }
    ]
}